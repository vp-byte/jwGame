<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="quizScreen" controller="com.jw.game.JWGame">
        <layer id="quizLayer" childLayout="vertical">
            <panel id="qiuzPanelTopSpace" height="10%" width="100%" align="center">
            </panel>
            <panel id="qiuzPanelCenter" height="30%" width="60%" align="center" childLayout="vertical">
                <text id="quizText" width="100%" height="100%" textVAlign="top" textHAlign="center" wrap="true"
                      font="Interface/Fonts/bmfont.fnt" text="Here goes some ТЕКСТ" />
            </panel>
            <panel id="quizPanelCenterSpace" height="25%" width="100%" align="center"></panel>
            <panel id="quizPanelBottom" height="25%" width="100%" align="center" childLayout="vertical">
                <panel id="quizPanelBottomTop" height="50%" width="100%" align="center" childLayout="horizontal">
                    <panel id="quizPanelBottomTopLeft" height="100%" width="50%" valign="center" childLayout="center">
                        <control id="buttonA" width="50%" height="60%" name="button" align="center" valign="center"
                                 label="A">
                        </control>
                    </panel>
                    <panel id="quizPanelBottomTopRight" height="100%" width="50%" valign="center" childLayout="center">
                        <control id="buttonB" width="50%" height="60%" name="button" align="center" valign="center"
                                 label="B">
                        </control>
                    </panel>               
                </panel>
                <panel id="quizPanelBottomBottom" height="50%" width="100%" align="center" childLayout="horizontal">
                    <panel id="quizPanelBottomBootomLeft" height="100%" width="50%" valign="center" childLayout="center">
                        <control id="buttonC" width="50%" height="60%" name="button" align="center" valign="center"
                                 label="C">
                        </control>
                    </panel>
                    <panel id="quizPanelBottomBottomRight" height="100%" width="50%" valign="center" childLayout="center">
                        <control id="buttonD" width="50%" height="60%" name="button" align="center" valign="center"
                                 label="D">
                        </control>
                    </panel>   
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
